[root]
size=1G
type=ext3
mountpoint=/
options=sync,errors=remount-ro

[swap]
size=2G
type=swap

[home]
size=1G
type=xfs
mountpoint=/home
options=nodev,nosuid

[opt]
size=1.5G
type=xfs
mountpoint=/opt
options=nodev

[tmp]
size=0.5G
type=xfs
mountpoint=/tmp
options=nodev,nosuid

[usr]
size=4G
type=xfs
mountpoint=/usr
options=nodev

[var]
size=4G
type=xfs
mountpoint=/var
options=nodev,nosuid

[var-tmp]
size=1.5G
type=xfs
mountpoint=/var/tmp
options=nodev,nosuid
